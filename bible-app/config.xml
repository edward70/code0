<?xml version='1.0' encoding='utf-8'?>

<widget id="com.edward.bible" version="1.1.4" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Bible</name>
    <description>
        A simple bible app.
    </description>
    <author email="example@example.com" href="http://example.com">
        Edward
    </author>
    <content src="index.html" />
    <preference name="android-minSdkVersion" value="14" />
    <icon src="icon.png" />
    <platform name="android">
        <icon src="/res/icons/android/drawable-ldpi-icon.png" density="ldpi" />
        <icon src="/res/icons/android/drawable-mdpi-icon.png" density="mdpi" />
        <icon src="/res/icons/android/drawable-hdpi-icon.png" density="hdpi" />
        <icon src="/res/icons/android/drawable-xhdpi-icon.png" density="xhdpi" />
        <icon src="/res/icons/android/drawable-xxhdpi-icon.png" density="xxhdpi" />
        <icon src="/res/icons/android/drawable-xxxhdpi-icon.png" density="xxxhdpi" />
        <splash src="/res/screens/android/drawable-land-ldpi-screen.png" density="land-ldpi" />
        <splash src="/res/screens/android/drawable-land-mdpi-screen.png" density="land-mdpi" />
        <splash src="/res/screens/android/drawable-land-hdpi-screen.png" density="land-hdpi" />
        <splash src="/res/screens/android/drawable-land-xhdpi-screen.png" density="land-xhdpi" />
        <splash src="/res/screens/android/drawable-land-xxhdpi-screen.png" density="land-xxhdpi" />
        <splash src="/res/screens/android/drawable-land-xxxhdpi-screen.png" density="land-xxxhdpi" />
        <splash src="/res/screens/android/drawable-port-ldpi-screen.png" density="port-ldpi" />
        <splash src="/res/screens/android/drawable-port-mdpi-screen.png" density="port-mdpi" />
        <splash src="/res/screens/android/drawable-port-hdpi-screen.png" density="port-hdpi" />
        <splash src="/res/screens/android/drawable-port-xhdpi-screen.png" density="port-xhdpi" />
        <splash src="/res/screens/android/drawable-port-xxhdpi-screen.png" density="port-xxhdpi" />
        <splash src="/res/screens/android/drawable-port-xxxhdpi-screen.png" density="port-xxxhdpi" />
    </platform>
    <!-- Whitelist configuration. Refer to https://cordova.apache.org/docs/en/edge/guide_appdev_whitelist_index.md.html -->
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
</widget>
